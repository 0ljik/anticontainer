<?xml version="1.0"?>
<!DOCTYPE bindings [
	<!ENTITY % bindingsDTD SYSTEM "chrome://dtaac/locale/bindings.dtd">
	%bindingsDTD;
	<!ENTITY % defbindingsDTD SYSTEM "chrome://dtaac-locale/content/bindings.dtd">
	%defbindingsDTD;
]>

